.input-text.field_text.row(ng-class="{'error' : displayError()===true,'has-calculator': getInfo().hasCalculator===true}", ng-hide='isActive() === false')
    .form-group
        label.control-label.col-md-3(ng-show='getInfo().fieldTitle') {{getInfo().fieldTitle | translateText}}
        .col-md-6
            div(ng-class="{'input-group':!!getInfo().money}")
                button.calculator.btn.btn-sm.btn-default.fa.fa-calculator(ng-click='openCalculator()')
                input.form-control(type='{{fieldType}}',
                id='{{getInfo().id}}',
                name='{{getInfo().name}}',
                ng-disabled='getInfo().disabled()',
                ng-model='getInfo().field[getInfo().fieldName]',
                numbers-only='{{getInfo().numbersOnly}}',
                ng-class="{input_number: getInfo().numbersOnly === 'integer' || getInfo().numbersOnly === 'double','money':!!getInfo().money}",
                placeholder='{{getInfo().placeholder}}',
                ng-show="getInfo().fieldType != 'textarea'",
                typeahead='c as c for c in getInfo().autoCompleteValue | filter:$viewValue | limitTo:10',
                typeahead-min-length='1')
                span.input-group-addon(ng-show='!!getInfo().money') {{getInfo().money}}
        .col-md-3.errors(ng-show='displayError()===true') {{getInfo().validationMessage | translateText}}
    .col-md-3.hidden-sm.hidden-md
    .col-md-6.help(ng-show='getInfo().details!=null') {{getInfo().details | translateText}}
